<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="left|center"
    android:id="@+id/cekobat"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        >
    <ImageView
        android:id="@+id/list_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="3pt"

        />
    <ImageView
        android:layout_width="1pt"
        android:layout_height="match_parent"
        android:background="@drawable/obat_bubuk"
        android:layout_marginHorizontal="5dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
        <TextView
            android:id="@+id/nama_obat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Obat:"
            />
            <TextView
                android:id="@+id/jenis_obat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis:"
                />

            <TextView
                android:id="@+id/Kadaluarsa_obat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kadaluarsa:"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tersedia:"
                    android:textColor="@color/teal_700"
                    />
                <TextView
                    android:id="@+id/jml_obat"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. "
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"
                    />
            <TextView
                android:id="@+id/harga_obat"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/deskripsi_obat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi:"
        android:layout_marginVertical="2pt"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"

        >

        <Button
            android:id="@+id/update"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:backgroundTint="#3EAA57"
            android:padding="0dp"
            android:text="Update"
            android:textColor="@color/white"

            />
        <Button
            android:id="@+id/remove"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:backgroundTint="#EA0909"
            android:text="Hapus"
            android:layout_gravity="center"
            android:padding="0dp"
            android:textColor="@color/white"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"

            />
    </LinearLayout>

<ImageView
    android:layout_width="match_parent"
    android:layout_height="1pt"
    android:background="@drawable/obat_bubuk"
    android:layout_margin="3dp"
    />
</LinearLayout>